<div class="container">
	<div class="row">
		<div class="span4 offset4">
			<form class="well" id="inviteForm" method="post" action="">
				<h2>Join: </h2>
				<p>{{message}}</p>
				<div class="control-group">
					<div class="controls">
						<input type="email" required="required" class="input-large" id="email" name="email" rel="popover" data-content="Enter your email." data-original-title="Email Address" placeholder="Email">
					</div>
				</div>
				<div class="control-group">
					<div class="controls">
						<input type="text" required="required" class="input-large" id="secret" name="secret" rel="popover" data-content="Super secret password." data-original-title="secret" placeholder="Tufts code">
					</div>
				</div>
				<button type="submit" class="btn btn-primary btn-large moreTopMargin">Get Invited</button>
			</form>
		</div>
	</div>
</div>

    

