<div class="container">
    <div class="row">
        <div class="span6 offset3">
            <form class="well" id="signUp" method="post" action="">
                <h2>Sign Up: </h2>
                <p>{{message}}</p>
                <div class="control-group">
                    <label class="control-label">Email</label>
                    <div class="controls">
                        <input type="text" class="input-xlarge disabled" id="email" name="email" disabled="" rel="popover" data-content="email" data-original-title="Email Address" placeholder={{eMail}}>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Firt Name</label>
                    <div class="controls">
                        <input type="text" class="input-xlarge" id="firstName" name="firstName" rel="popover" data-content="firstName" data-original-title="First Name">
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Last Name</label>
                    <div class="controls">
                        <input type="text" class="input-xlarge" id="lastName" name="lastName" rel="popover" data-content="Last Name" data-original-title="Last Name">
                    </div>
                </div>


                <div class="control-group">
                    <label class="control-label">Password</label>
                    <div class="controls">
                        <input type="password" class="input-xlarge" id="password" name="password" rel="popover" data-content="Super secret password." data-original-title="Password">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Confirm Password</label>
                    <div class="controls">
                        <input type="password" class="input-xlarge" id="confirmPassword" name="confirmPassword" rel="popover" data-content="Super secret password." data-original-title="confirmPassword">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-large moreTopMargin">Get Started</button>
            </form>
        </div>
    </div>
</div>

{{#extend "stylesheets"}}{{/extend}}
{{#extend "scripts"}}{{/extend}}
    

