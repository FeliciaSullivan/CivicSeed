*, *:before, *:after
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box

body
	margin-top 110px
	font-family $bodyFont

.btn, .btn-group .btn:first-child, .btn-group.open .dropdown-menu
	$borderRadius(0)
	border 0 none
	&:hover 
		color white
		$box-shadow()

.navbar .btn, .navbar .btn-group
	margin-top 10px

input, .input, textarea
	$borderRadius(0)
	background #ccc
	color #333

.container
	width 970px

p, li, h1,h2, h3, h4, h5
	font-family $bodyFont

a, button, i, span
	font-family $buttonFont
	font-weight 300

a:hover
	text-decoration none

.moreTopMargin
	margin-top 10px

.iconInfo
	margin-bottom 30px

.console
	margin 25px auto
	padding 25px
	width 800px
	background #eee
	box-shadow 3px 3px 3px #999
	form
		margin 12px 0
		padding 20px 20px 8px
		border 2px solid #ddd
		background-color white
	.loader
		margin 12px 0
		padding 20px 20px 8px
		border 2px solid #ddd
		background-color white
		pre
			margin 12px 0
.tempFixMargin
	margin-right 50px

.navbar-inner
	background white
	box-shadow none
	// border-bottom 2px dashed $csOrange

.navbar .nav > li > a
	line-height 1
	color $csGray
	border-right 1px solid $csGray

.navPadding
	padding 10px

.navPadding a.brand
	font-family $cursiveFont
	color $csGray
	font-size 3em
	padding-bottom 0
	padding-left 40px

.zag
	position fixed
	width 100%
	height 10px
	background $cloudUrl('img/other/zig.png')

#mainNavigation
	margin-top 8px