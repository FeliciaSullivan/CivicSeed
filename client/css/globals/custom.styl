*, *:before, *:after
	box-sizing border-box

body
	margin-top 110px
	font-family $bodyFont

.container
	width 970px

.navbar
	user-select none
	.navbar-inner
		background white
		box-shadow none
	.navPadding
		padding 10px
		a.brand
			font-family $cursiveFont
			color $csGray
			font-size 3em
			padding-bottom 0
			padding-left 40px
	.nav
		margin-top 8px
		li
			border-right 1px solid $csGray
			line-height 1
			font-size 1.1em
			&:last-of-type
				border none
		& > li > a
			color $csGray
	.btn, .btn-group
		margin-top 10px
	.btn-group
	  // .tempFixMargin
		margin-right 50px
	.username
		margin 0 6px
	.caret
		margin-top 10px
	.zag
		position fixed
		width 100%
		height 10px
		background $cloudUrl('img/other/zig.png')
	.dropdown-menu
		left -72px
		&::before
			left auto
			right 9px
		&::after
			left auto
			right 10px

input, .input, textarea
	border-radius 0
	padding 15px 10px
	background $csLightGray
	color $csBlack
	font-family $buttonFont

.btn, .btn-group .btn:first-child, .btn-group.open .dropdown-menu
	border-radius 0
	border 0 none
	&:hover
		color white
		box-shadow 0 0 0 3px $csLightGray

h1, h2, h3, h4, h5, h6
	font-family $bodyFont

p
	font-family inherit

a, button, i, span
	font-family $buttonFont
	font-weight 300

button
	outline none !important

a:hover
	text-decoration none

.moreTopMargin
	margin-top 10px

.iconInfo
	margin-bottom 30px

.console
	margin 25px auto
	padding 25px
	width 800px
	background #eee
	box-shadow 3px 3px 3px #999
	h4
		text-transform capitalize
	form
		margin 12px 0
		padding 20px 20px 8px
		border 2px solid #ddd
		background-color white
	.loader
		margin 12px 0
		padding 20px 20px 8px
		border 2px solid #ddd
		background-color white
		pre
			margin 12px 0

blockquote
	// Override Bootstrap's silly blockquote style
	margin 1em 40px
	border-left 4px solid #b3b3b3

// Fix broken bootstylus tooltip arrows
.tooltip.top, .tooltip.bottom
	.tooltip-arrow
		margin-left -5px

