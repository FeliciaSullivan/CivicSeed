//CIVIC SEED VALUES
$csBlack  = #222
$csGray   = #999
$csPurple = #373b6d
$csOrange = #ffb47c
$csGreen  = #a7e495
$csBlue   = #79ccce
$csRed    = #f94f33
$csYellow = #f7d73d

$csLightGray   = #e2dfdf
$csLightPurple = lighten($csPurple, 70%)
$csLightOrange = lighten($csOrange, 25%)
$csLightGreen  = lighten($csGreen, 25%)
$csLightBlue   = lighten($csBlue, 25%)

$csDarkOrange  = darken($csOrange, 20%)
$csDarkGreen   = darken($csGreen, 20%)
$csDarkBlue    = darken($csBlue, 20%)
$csDarkGray    = darken($csGray, 20%)

$csLightOrange2 = #f8c4a6
$csLightGreen2  = #b3ece9
$csLightBlue2   = #7bc9eb
$csLightGray2   = #c2bfbf

$csUIDropShadow = 0 2px 8px 2px rgba(64,64,64,0.15)

$mono        = 'InconsolataMedium', monospace
$bodyFont    = 'Arvo', serif
$cursiveFont = 'Satisfy', serif
$buttonFont  = 'Nunito', serif

// Color code classes
.color-black
  color $csBlack
.color-gray
  color $csGray
.color-purple
  color $csPurple
.color-orange
  color $csOrange
.color-green
  color $csGreen
.color-blue
  color $csBlue
.color-red
  color $csRed
.color-yellow
  color $csYellow
.color-lightgray
  color $csLightGray
.color-lightpurple
  color $csLightPurple
.color-lightorange
  color $csLightOrange
.color-lightgreen
  color $csLightGreen
.color-lightblue
  color $csLightBlue
.color-darkorange
  color $csDarkOrange
.color-darkgreen
  color $csDarkGreen
.color-darkblue
  color $csDarkBlue
