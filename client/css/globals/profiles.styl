.demo-profile
	p, li
		font-family $buttonFont
		font-size 1.2em
		color #333
	h1
		color $csGreen
	h2
		color $csBlue
	.demoUserPlayLink
		margin 30px 0 30px 0
		a
			background $csGreen
			padding 10px
			color white

.user-profile
	margin-bottom 40px // Should be a generic page property?
	.row
		margin-top 20px
	.school
		margin-top 0
		font-size 1.5em
	.public-lock
		margin-top 20px // Match h1.nombre
	.resume-text
		font-size 1.5em
		font-family $buttonFont
		line-height 1.2
	h2
		margin-top 0
	.motivations
		h2
			color $csDarkGreen
		p
			color $csGreen
	.background
		h2
			color $csDarkOrange
		p
			color $csOrange
	.goals
		h2
			color $csLightGray2
		p
			color $csGray
	.objectives
		h2
			color $csDarkBlue
		p
			color $csBlue
	.feedback
		.row
			display none
			margin-top 10px
		.comment
			padding 5px 10px
			background $csPurple
			font-family $buttonFont
			p
				color white
			h4
				color rgba(255,255,255,0.75)
				font-size 1em

.withPlayer
	text-align center
	img
		padding 5px 10px
		border 4px solid $csGray

.resumeText
	-webkit-user-modify read-write
	-moz-user-modify read-write


.info
	background #000
	text-align center

.info
	display none
	img
		margin: 10px 0;
		max-width: 128px;
		max-height: 128px;

	table {
		tr, td {
			border: none;
			color: #666;
		}
		td:nth-child(odd) {
			text-align: right;
		}
		td:nth-child(even) {
			text-align: left;
		}
	}

h3.linkage {
	color: #ccc;
	font-size: 1.5em;
	margin-top:10px;
}

.color-map
	text-align center
	img
		margin 0 auto
		border 1px solid $csLightGray

.save-profile-button
	background $csGreen

.profileToggle
	color $csBlue
	cursor pointer
	i
		float right
	p
		text-align right
		clear both

