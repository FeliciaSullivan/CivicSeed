.box
	margin 0 5px
	p
		padding: 10px
		font-family $buttonFont

		
.profiles > .row {
	//margin 10px 0px 20px 0px
}

.profiles > .row > div {
	margin 0
}

.profiles
	h1, h2
		color #222
	p 
	color white
.motivations
	background $csGreen
	$borderRadius(6px)
	h2
		color $csLightGreen
.values
	background $csGray
	$borderRadius(6px)
	h2
		color #ccc

.background
	background $csOrange
	$borderRadius(6px)
	h2
		color $csLightOrange
.goals
	background $csBlue
	$borderRadius(6px)
	h2
		color $csLightBlue

.info
	background #000
	$borderRadius(6px)
	text-align center

.info
	display none
	img
		margin: 10px 0;	
		max-width: 128px;
		max-height: 128px;
	
	table {
		tr, td {
			border: none;
			color: #666;
		}
		td:nth-child(odd) {
			text-align: right;
		}
		td:nth-child(even) {
			text-align: left;
		}
	}

h1.nombre {
	color: #aaa;
}
h3.linkage {
	color: #ccc;
	font-size: 1.5em;
	margin-top:10px;
}
.buttonResume 
	margin 20px 0
	a
		font-size 1.5em
		line-height 1.5em
		color white
	padding 10px