.demo-profile
  p, li
    font-family $buttonFont
    font-size 1.2em
  h1
    color $csGreen

.user-profile
  .row:not(:first-of-type)
    margin-top 2em
  .school
    margin-top 0
    font-size 1.5em
  .public-lock
    margin-top 2em // Match h1.name
  .resume-text
    font-size 1.5em
    font-family $buttonFont
    line-height 1.2
  h2
    margin-top 0
  .motivations
    h2
      color $csDarkGreen
    p
      color $csGreen
  .background
    h2
      color $csDarkOrange
    p
      color $csOrange
  .goals
    h2
      color $csLightGray2
    p
      color $csGray
  .objectives
    h2
      color $csDarkBlue
    p
      color $csBlue
  .feedback
    .row
      display none
      margin-top 10px
    .comment
      padding 5px 10px
      background $csPurple
      font-family $buttonFont
      p
        color white
      h4
        color rgba(255,255,255,0.75)
        font-size 1em

.civic-resume
  .profile-image
    position relative
    margin 1em auto
    width 100px
    height 100px
    border 4px solid $csBlue
    border-radius 50%
    background-color $csLightGray
    background-position center center
    background-size cover
    font-size 1rem
    overflow hidden
    user-select none
    &:hover
      .uploader
        display block
    &:active
      // Note: this works pretty poorly in Chrome because
      // the browser is actually busy opening UI
      // (and maybe doesn't work in Firefox at all)
      animation blink-border 250ms 2 step-start
      -webkit-animation blink-border 250ms 2 step-start
    .uploader
      display none
      width 100%
      height 100%
      padding-top 1.8em
      background-color rgba(0,0,0,0.5)
      text-align center
      text-shadow 0 1px 2px rgba(0,0,0,0.5)
      color white
      p
        line-height 1.1em
        font-size 1.3em
        padding 0.25em 1em
      input
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        padding 0
        border 0
        background-color transparent
        opacity 0
        cursor pointer
    .upload-icon
      font-size 3em
  .name, .school
    margin 0 auto
  .name
    color $csDarkGreen
  .school
    color $csGray
  .resume-address
    color $csGray
    p
      margin 0
  .resume-content
    margin-top 1em
    border-top 4px solid $csLightGray
    padding-top 2em
  .resume-headers
    @media screen and (min-width $screen-sm-min)
      text-align right
    h3
      margin-top 0
      color $csDarkBlue
  .resume-text
    font-family $buttonFont
    padding-bottom 1em
    @media screen and (min-width $screen-sm-min)
      border-left 2px solid $csLightGray
      min-height 6em
    ul
      list-style-type none
      padding-left 0
  .footer  // Do not use?
    height 3em
    text-align center
    @media screen and (min-width $screen-sm-min)
      background-color #dbff85
      margin-top 60px
    img
      margin-bottom 30px
      @media screen and (min-width $screen-sm-min)
        margin-top -60px
        margin-bottom 0


vendors = webkit
@keyframes blink-border {
  0% {
    border-color $csBlue
  }
  50% {
    border-color $csOrange
  }
  100% {
    border-color $csBlue
  }
}

.withPlayer
  text-align center
  img
    padding 5px 10px
    border 4px solid $csGray

.resumeText
  -webkit-user-modify read-write
  -moz-user-modify read-write


.info
  background #000
  text-align center

.info
  display none
  img
    margin: 10px 0;
    max-width: 128px;
    max-height: 128px;

  table {
    tr, td {
      border: none;
      color: #666;
    }
    td:nth-child(odd) {
      text-align: right;
    }
    td:nth-child(even) {
      text-align: left;
    }
  }

h3.linkage {
  color: #ccc;
  font-size: 1.5em;
  margin-top:10px;
}

.color-map
  text-align center
  img
    margin 0 auto
    border 1px solid $csLightGray

.save-profile-button
  background $csGreen

.profileToggle
  color $csBlue
  cursor pointer
  i
    float right
  p
    text-align right
    clear both

