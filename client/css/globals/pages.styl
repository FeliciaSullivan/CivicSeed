.demoUserPlayLink
	font-size 1.5em

.introduction
	iframe
		margin-top 20px
	p
		margin-top 50px
		a
			background $csGreen
			padding 20px
			border-radius 5px
			color white
			font-size 1.5em
.homepage
	margin-top 80px
	.welcome
		h1
			font-size 3em
			font-family $cursiveFont
			color $csGreen
			text-align center
			line-height 1.4
		h4 
			font-size 1.5em
			font-weight 400
			color $csLightGreen
			font-family $bodyFont
			text-align center
		p
			font-size 1.2em
			text-align justify
			color $csGray
		.span3
			p
				margin-bottom 0
				padding-bottom 0
	#loginForm
		input 
			margin 10px 0
			width 100%
.welcome p.ready
	text-align center
body
	padding-top 80px
	font-family $bodyFont

p, li, h1,h2, h3, h4, h5
	font-family $bodyFont

a, button, i, span
	font-family $buttonFont
	font-weight 300

a:hover
	text-decoration none
.moreTopMargin
	margin-top 10px
.iconInfo
	margin-bottom 30px

.console
	margin 25px auto
	padding 25px
	width 800px
	background #eee
	box-shadow 3px 3px 3px #999
	form
		margin 12px 0
		padding 20px 20px 8px
		border 2px solid #ddd
		background-color white
	.loader
		margin 12px 0
		padding 20px 20px 8px
		border 2px solid #ddd
		background-color white
		pre
			margin 12px 0
.tempFixMargin
	margin-right 50px

.navbar-inner
	background white
	box-shadow none
	// border-bottom 2px dashed $csOrange

.navbar .nav > li > a
	line-height 1
	color $csGray
	border-right 1px solid $csGray

.navPadding
	padding 10px

.navPadding a.brand
	font-family $cursiveFont
	color $csGray
	font-size 3em
	padding-bottom 0
	padding-left 40px
.zag
	position fixed
	width 100%
	height 10px
	background $cloudUrl('img/other/zig.png')
#mainNavigation
	margin-top 8px