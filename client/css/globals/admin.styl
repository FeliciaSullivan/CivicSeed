.monitor
	.adminLink
		width 150px
		cursor pointer
		padding 10px
		background $csOrange
		color white
		text-align center
		font-family	$buttonFont
		$borderRadius(5px)

	#questions
		background $csBlue

	#chat
		background $csPurple

	.output
		margin 20px 0 40px 20px
		.allChat
			font-family $buttonFont
			p 
				margin 20px 0
			.time
				color white
				font-size .8em
				padding 11px 7px 7px 7px 
				background $csGray
			.who
					padding 5px
					color white
					font-size 1.2em
					background $csPurple
			p:nth-of-type(even)
				.what 
					padding 5px
					color white
					font-size 1.2em
					background $csBlue
			p:nth-of-type(odd)
				.what 
					padding 5px
					color white
					font-size 1.2em
					background $csGreen
		.question
			font-family $bodyFont
			cursor pointer
			margin 0
			margin-top 20px
			color white
			padding 10px
			font-size 1.2em
			
		.answer
			background $csGray
			color white
			padding 10px
			margin 0
			position relative
			p 
				width 90%
				font-size 1.2em
				font-family $buttonFont
			.extras
				position absolute
				right 10px
				top 10px
				i 
					color #eee
					margin 5px
		
		.allQuestion
			margin-bottom 30px
			p
				color white
				padding 10px
				margin 0
				font-size 1.2em
				font-family $buttonFont
			p.allPlayerAnswers
				background $csGray
			p.mainQ
				font-family $bodyFont
				cursor pointer
				margin-top 20px
p.level0
	background $csGreen
p.level1
	background $csPurple
p.level2
	background $csBlue
p.level3
	background $csOrange

#dataLoaders 
	button
		margin 10px

.npcs
	.npc
		margin 20px 0
		color white
		position relative
		p
			margin 0
			padding 10px
		.npcName
			font-size 1.5em
		textarea
			resize none
			height 80px
			margin 10px
		.information
			background $csGreen
			padding 10px
		.question
			background $csOrange
			padding 10px
		.prompts
			background $csBlue
			padding 10px
		.category
			font-size 1.4em
		.saveChanges
			background $csPurple
			color white
			font-family 1em
			width 160px
			text-align center
			$borderRadius(5px)
			padding 10px
			font-family $buttonFont
			cursor pointer
			position absolute
			top 10px
			right 10px