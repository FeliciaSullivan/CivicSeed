.dialog     // Consider making a generic set of styles for all .dialogs (.resourceContent, .botanistContent, .speechBubble)
	.speakerName
		font-size 1.2em
		font-weight 700
		color $csBlue
		&::after
			content ': '

.skinventory
	.parts
		margin-bottom 10px
		text-align center
		.part
			// margin 0 auto 10px
			margin 0 0 10px 32px
			.outer
				cursor pointer
				float left
				// bugged
				// display inline-block
				width 56px
				height 100%
				margin-right 20px
				padding 10px
				border 2px solid $csLightGray
				background-color #f4f4f4
				.inner
					width 100%
					height 100%
					font-size 1.5em
					text-align center
					color $csBlue
				&:not(.locked):hover
					border 2px solid $csGreen
					background-color white
				&:last-of-type
					margin-right 0
			.locked
				&:hover
					i
						color $csRed
			.equipped
				border 2px solid $csDarkGreen
				background-color white
		.head
			height 54px
			.inner
				line-height 30px                // Positioning for lock
				background-position 0 0         // Positioning for sprite
		.torso
			height 41px
			.inner
				line-height 17px                // Positioning for lock
				background-position 0 -30px     // Positioning for sprite
				i  // Overrides font-awesome line-height
					line-height inherit !important
		.legs
			height 42px
			.inner
				line-height 19px                // Positioning for lock
				background-position 0 -45px     // Positioning for sprite

