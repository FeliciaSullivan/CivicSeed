@font-face
	font-family 'InconsolataMedium'
	src $cloudUrl('fonts/Inconsolata-webfont.woff') format('woff'),
		$cloudUrl('fonts/Inconsolata-webfont.ttf') format('truetype')
	font-weight normal
	font-style normal

.gameboard
	// cursor none
	position relative
	box-sizing content-box
	width 960px
	height 480px
	margin 0 auto
	padding 0
	border 4px solid #222
	z-index 0
	background #eee
	color #333
	-webkit-touch-callout none
	user-select none
	cursor default
	.cutSceneBg
		background black
		width 960px
		height 480px
		display none
		position absolute
		z-index 9999
		top 0
		left 0
		.cutScene
			position absolute
			width 960px
			height 480px
	.defeatedRobot
		text-align center
	.bossArea .bossButton a
		color white

.loading
	margin 150px 0 0 0
	text-align center
	color #222

.resourceStage
	display none

.gameboardOverlay
	display none
	position absolute
	top 15px
	left 15px
	width 930px
	height 450px
	z-index 9999
	padding 20px
	background #efefef
	background-image $cloudUrl('img/bg/grey.png')
	box-shadow $csUIDropShadow
	h2
		color $csBlue
		font-size 2em
	h3
		color $csGreen
	a
		i.fa // Font-Awesome X 'close' button
			position absolute
			top 12px
			right 12px
			font-size 36px
	.buttons
		position absolute
		z-index 9994
		bottom 20px
		left 0
		width 100%
		height 30px
		.left
			position absolute
			left 20px
		.right
			position absolute
			right 20px
		button
			display none

.overlayContent
	min-height 320px
	max-height 340px
	padding 16px
	overflow auto
	border 3px solid $csGray
	background-color #eee
	user-select text
	cursor text

.botanistArea
	z-index 9990
	&.puzzle-mode
		height 390px
		.tangramArea
			top 20px
	.dialog
		// See also .dialog at .resourceArea
		padding-right 50px
	.seedChips
		margin-top 30px
		text-align center
	.tangramArea
		position absolute
		top 40px
		left 0
		height 360px
		padding 0
		z-index 9992
		display none
		.puzzleSvg
			position absolute
			top 0
			left 0
			width 930px
			height 380px
		.trash
			position absolute
			top 170px
			right -6px
			&.active
				opacity 0.5


.resourceArea
	.dialog, .finalQuestion
		padding-right 50px
	.finalQuestion
		font-size 1.2em
		color $csBlack

	form
		margin 20px 0 0
		textarea
			width 100%
			min-height 200px
			padding 10px
		input[type='radio']
			// Somewhere the alignment is actually incorrect
			margin 0 10px 0 20px
			line-height 24px
		label
			// Overrides display: block elsewhere (bootstrap?)
			display inline-block

.resourceContent
	// font-family $bodyFont
	.tangramPiece
		img
			// display block
			// margin 0 auto
			// Should be centered - but have to fake it because tangram pieces are
			// very wide and manually positioned on the image
			margin-left 45px
			height 250px
	.taglineInput
		// Occurs only with .privacyMessage?
		text-align center
		input
			width 400px
	.privacyMessage
		color $csOrange

	.publicAnswers
		ul
			margin 0

	.playerAnswers
		position relative
		padding 14px 140px 5px 14px
		margin 10px 0
		min-height 42px
		background $csLightGreen
		color #222
		list-style none
		span
			margin-right 5px
			color white
		p
			font-family $buttonFont
		.publicButton, .privateButton, .pledgeButton
			position absolute
			right 10px
			bottom 10px
			i
				margin-left 4px
				color $csDarkBlue
	.yourAnswer
		user-select text
		cursor text
		background $csLightBlue

.resourceContentBody
	margin-right 30px  // And not overlap the X button
	height 360px
	padding 20px
	border 3px solid $csGray
	background #333
	overflow auto
	color #eee
	user-select text
	cursor text
	h1, h2, h3, h4, h5, h6
		// Allow all size headers to be used in resource text
		// Verify line-height issues with these.
		color $csBlue
		margin-bottom 0.5em
	h2
		// This is default. The line-height override fixes multiple line issues.
		line-height 1.4em
	p, blockquote, li
		// Shouldn't have to set these properties that specifically for the parent
		// div - something is overriding it.
		font-family $buttonFont
		font-size 1.1em
	p + h2, ul + h2, blockquote + h2
		margin-top 0.75em
	ul
		list-style-type square
	li
		margin 5px 20px
	.videoResource
		text-align center
		background $cloudUrl('img/bg/loading.png') no-repeat center center
		margin-top 18px     // Ideally, vertically centered. Fake it till you make it
	.digitalStory
		margin 150px 0 0 0  // Fake vertical centering
		font-size 1.5em
		text-align center
	.lede
		margin 90px 60px 0
		font-size 1.5em
		line-height 1.4em
		text-align center


.progressArea
	h2
		color $csGreen
		font-size 3.5em
	.personalInfo
		position absolute
		left 20px
		bottom 20px
		width 280px
		height 330px
		padding 10px
		// border 3px solid $csLightOrange
		background $csGray
		color white
		.levelImages img
			margin 7px
			border 2px solid rbga(0,0,0,0)
		.resourcesCollected
			position absolute
			top 220px
			left 20px
			font-size 1.5em
		.numCollected
			position absolute
			font-family $buttonFont
			top 280px
			right 20px
			font-size 2em
		.currentLevel
			position absolute
			width 230px
			font-size 1.4em
			line-height 1.4em
			text-align left
			left 20px
			top 90px
		.currentLevelImage
			border 2px solid $csLightOrange
		.collectedButton
			position absolute
			top 275px
			left 20px

	.tabbable
		position absolute
		// Hack
		bottom 42px
		left 325px
		width 310px
		height 360px
		margin 0
		padding 0
		ul.nav.nav-tabs
			margin 0
			border 0
			li
				margin 0
				padding 0
				width 155px
			li a
				font-family $bodyFont
				font-size 1.2em
				border 0
				color white
				text-align center
			li.tabYou, li.active.tabYou, li.active.tabYou a, li.tabYou a:hover
				margin 0
				background $csLightOrange
				border 0
			li.tabEveryone, li.active.tabEveryone, li.active.tabEveryone a, li.tabEveryone a:hover
				margin 0
				background $csOrange
				border 0
		.tab-content
			p
				color #fff
				position absolute
			.displayTime, .displayPercent
				font-family $buttonFont
				font-size 1.3em
				top 326px
			.displayTime
				left 10px
			.displayPercent
				right 10px
			.timeTitle
				top 352px
				left 10px
				color #efefef
			.percentTitle
				top 352px
				right 10px
				color #efefef
		#tab1, #tab2
			width 310px
			height 350px
			background $csLightOrange
		#tab2
			background $csOrange
		// 	width 310px
		// 	height 350px
		.colorMapYou,
		.colorMapEveryone
			position absolute
			top 50px
			left 12px
			background #fff
			width 284px
			height 264px
		.colorMapYou img
			width 284px
		.colorMapEveryone img
			position absolute
			width 284px
		.displayPercent
			position absolute
			top 200px
			left 10px
	.topSeeders
		position absolute
		bottom 20px
		right 20px
		width 250px
		height 330px
		background $csLightGreen
		color #333
		overflow auto
		p
			font-size 1.2em
			color white
			text-align center
			padding 5px 0 5px 0
			background $csGreen
		ol
			padding-left 15px
			li
				font-family $buttonFont
				font-size .8em
		.yourSeeds
			font-family $buttonFont
			color $csGreen
			background none
			border none
			padding 0px
			bottom 0
			margin 10px 0 0 0px

.collectedResources
	box-shadow none
	.backToProgress
		position absolute
		bottom 20px
		left 20px
	.displayMyAnswers
		height 320px
		.theQuestion
			font-size 1.1em
		.theAnswer
			position relative
			margin 15px 0
			font-family $buttonFont
			background $csLightGreen
			.seededCount
				position absolute
				top 6px
				right 6px
				font-family $buttonFont
				background $csPurple
				padding 3px
				border-radius 4px
				line-height 1
				color #fff
			.answerText
				width 780px
				padding 5px 10px
