.gameboard
	canvas#background(width='960px', height='480px')
	canvas#characters(width='960px', height='480px')
	canvas#foreground(width='960px', height='480px')
	canvas#interface(width='960px', height='480px')
	canvas#minimapTile(width='142px', height='132px')
	canvas#minimapPlayer(width='142px', height='132px')

	.loading
		p
			img(src='#{CivicSeed.CLOUD_PATH}/img/game/loader.gif')
		p loading

	.resourceArea.gameboardOverlay
		a(href='#')
			i.fa.fa-times-circle.fa-lg
		p.dialog
			span.speakerName
			span.message
		.resourceContent
		.resourceContentBody
		.tagline-input
			input(name='tagline', type='text', value='', maxLength='60', autofocus)
			.privacy-message Summarize what you just learned. Youâ€™ll need it later!
		.buttons
			.left
				button.backButton.btn.btn-info(type='button') Back
			.right
				button.nextButton.btn.btn-success(type='button') Next
				button.saveButton.btn.btn-success(type='button') Save
				button.answerButton.btn.btn-success(type='button') Answer
				button.closeButton.btn.btn-primary(type='button') Close
		.check
			.check-dialog.confirm-skimpy
				p Are you sure? That seems a bit skimpy...
				.buttons
					button.sureButton.right.btn.btn-success(type='button') I'm Sure
					button.retryButton.left.btn.btn-primary(type='button') I'll Add More
			.check-dialog.message-feedback
				p.feedback
				.buttons
					button.btn.btn-primary(type='button') Okay

	.botanistArea.gameboardOverlay
		a(href='#')
			i.fa.fa-times-circle.fa-lg
		p.dialog
			span.speakerName
			span.message
		.botanistContent
		.tangramArea
			.tangramOutline
		.buttons
			.left
				button.backButton.btn.btn-info(type='button') Back
				button.clearBoardButton.btn.btn-info(type='button') Clear Board
			.right
				button.nextButton.btn.btn-success(type='button') Next
				button.answerButton.btn.btn-success(type='button') Answer
				button.closeButton.btn.btn-primary(type='button') Close
		.check
			.check-dialog
				p.feedback
				.buttons
					button.retryButton.btn.btn-primary(type='button') Okay

	.progressArea.gameboardOverlay.patternBg2
		h2 Progress
		.personalInfo
			.levelImages
				img(src='#{CivicSeed.CLOUD_PATH}/img/game/rank/0.png').currentLevelImage
				img(src='#{CivicSeed.CLOUD_PATH}/img/game/rank/1.png')
				img(src='#{CivicSeed.CLOUD_PATH}/img/game/rank/2.png')
				img(src='#{CivicSeed.CLOUD_PATH}/img/game/rank/3.png')
			p.currentLevel novice gardener
			p.resourcesCollected resources collected:
			p.numCollected 12/40
			button.btn.collectedButton.btn-success(type='button') View Answers

		.tabbable
			ul.nav.nav-tabs
				li.active.tabYou
					a(href='#tab1', data-toggle='tab') you
				li.tabEveryone
					a(href='#tab2', data-toggle='tab') everyone
			.tab-content
				.tab-pane.active#tab1
					.colorMapYou
						img(src='')
					p.displayTime
					p.timeTitle time played

				.tab-pane#tab2
					.colorMapEveryone
						img(src='')
					.displayPercent
						.progress
							.bar
					p.percentTitle world color meter

		.topSeeders

		a(href='#')
			i.fa.fa-times-circle.fa-lg

	.collectedResources.gameboardOverlay.patternBg3
		h2 Your Answers
		.displayMyAnswers.overlayContent You haven't collected any resources yet.
		button.btn.backToProgress.btn-info(type='button') Back

	.helpArea.gameboardOverlay
		h2 How To Play
		.helpContent.overlayContent
			include help
		a.closeButton(href='#')
			i.fa.fa-times-circle.fa-lg

	.bossArea.gameboardOverlay.patternBg2
		.content
		p.buttons
			button.bossButton.btn.btn-success(type='button') Next

	.skinventory.gameboardOverlay.patternBg3
		h2 Changing Room
		p Customize your suit! Mix and match different parts to create your look.  Unlock more pieces by talking to other characters in the world.
		.parts
			.part.head(data-part='head')
			.part.torso(data-part='torso')
			.part.legs(data-part='legs')
		.skinformation
			h3 You're wearing
			p Just the basics!
		a.closeButton(href='#')
			i.fa.fa-times-circle.fa-lg

	.inventory
		.outlines
		.pieces
		button.closeButton.btn.btn-primary(type='button') Close
		p.inventoryHelp click piece to view resource

	p.statusUpdate
		span

	.seedventory
		.seed.regularButton
			i.fa.fa-leaf.fa-lg(title='regular seed', data-placement='top')
			span.badge.always-show
		.seed.drawButton
			i.fa.fa-star.fa-lg(title='paintbrush seed', data-placement='top')
			span.badge.always-show
	.graffiti
		p seeds left: <span></span>

	.speechBubble
		p.dialog
			span.speakerName
			span.message
		.buttonCorner
			button.nextButton.btn.btn-success(type='button') Next
			button.closeButton.btn.btn-primary(type='button') Okay
			button.noButton.btn.btn-primary(type='button') Close
			button.yesButton.btn.btn-success(type='button') View

	.pauseMenu
		p please re-focus your mind, body, and the window...
		p
			button.unPause.btn.btn-success(type='button') Resume Game
	.waitingForSeed
		img(src='#{CivicSeed.CLOUD_PATH}/img/game/spinloader.gif')
	.beamMeUp
